<div>
<%= form_with model: [@product, @purchase], method: "PUT" ,local: true do |f| %>
  <%= f.hidden_field :purchase_id %>

  <div style="margin-top: 10px;">
    <div><%= f.label :quantity %><div>
    <%= f.text_field :quantity %>
  </div>

  <div style="margin-top: 10px;">
    <div><%= f.label :delivery_address %><div>
    <%= f.text_area :delivery_address %>
  </div>

  <div style="margin-top: 14px;">
    <%= f.submit "Update" %>
  </div>
<% end %>

</div>
